<div class="container">
  <div class="row d-flex align-items-center p-5">
    <h4>お問い合わせフォーム</h4>
  </div>

  <%= form_with model: @inquiry, local:true do |f| %>
    <div class="form-group row md-3 offset-2 mx-auto pb-3" style="width: 300px;">
      <div class="text-center mt-2" style="width: 300px;">
        <%= f.label :name, "ニックネーム" %>
      </div>
        <%= f.text_field :name, class: "form-control name" %>
    </div>

    <div class="form-group row md-3 offset-2 mx-auto pb-3" style="width: 300px;">
      <div class="text-center mt-2" style="width: 300px;">
      <%= f.label :email, "メールアドレス" %></div>
      <%= f.email_field :email, class: "form-control email" %>
    </div>

    <div class="form-group row md-3 offset-2 mx-auto pb-3" style="width: 300px;">
      <div class="text-center mt-2" style="width: 300px;">
      <%= f.label :message, "本文" %></div>
      <%= f.text_area :message, class: "form-control message" %>
    </div>

    <div class="form-group text-center">
      <p><%= f.submit "送信", class: "btn btn-outline-info" %></p>
    </div>
  <% end %>
</div>