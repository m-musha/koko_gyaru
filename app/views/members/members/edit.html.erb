<div class="container">
  <div class="row d-flex align-items-center">
    <h4>プロフィールを編集</h4>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model:@member, local:true do |f| %>
        <%= render 'layouts/error_messages', object: @member %>
        <div class="form-group text-center">
          <%= attachment_image_tag @member, :profile_image, size:"160x160", fallback: "no_image.jpg" %>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group text-center">
          <%= f.label :name, "ニックネーム" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group text-center">
          <%= f.submit "変更", class: "btn btn-outline-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>