<div class="container">
  <div class="row d-flex align-items-center">
    <h4 class="col-md-12 text-center">プロフィールを編集</h4>
  </div>
  <div class="row">
    <%= form_with model: @member, local:true do |f| %>
      <div class="form-group">
        <%= f.label :image, "プロフィール写真" %>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="form-group">
        <%= f.label :name, "ニックネーム" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更", class: "btn btn-outline-success" %>
      </div>
    <% end %>

  </div>
</div>