<div class="container">
  <div class="row d-flex align-items-center p-5">
    <h4>新規メンバー登録</h4>
  </div>
  <%= render "members/shared/error_messages", resource: resource %>
  <%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member', local: true do |f| %>

      <div class="form-group row md-3 offset-2 pb-3">
        <%= f.label :name, "ニックネーム", class:"control-label col-sm-3 text-right" %><br />
        <%= f.text_field :name, class:"form-control col-4", autofocus: true %>
      </div>

      <div class="form-group row md-3 offset-2 pb-3">
        <%= f.label :email, "メールアドレス", class:"control-label col-sm-3 text-right" %><br>
        <%= f.email_field :email, class:"form-control col-4", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group row md-3 offset-2 pb-3">
        <%= f.label :password, "パスワード(６文字以上)", class:"control-label col-sm-3 text-right" %><br>
        <%= f.password_field :password, class:"form-control col-4", autocomplete: "new-password" %>
      </div>

      <div class="form-group row md-3 offset-2 pb-3">
        <%= f.label :password_confirmation, "パスワード(確認用)", class:"control-label col-sm-3 text-right" %><br />
        <%= f.password_field :password_confirmation, class:"form-control col-4", autocomplete: "new-password" %>
      </div>

    <div class="row mb-4">
      <%= f.submit "新規登録", class:"col-2 offset-5 btn btn-outline-success" %>
    </div>
    <% end %>
    </div>
    </div>
  </div>


    <div class="row mb-2">
      <div class="col-3 offset-2"></div>
      すでにメンバーの方はここから<strong><%= render "members/shared/links" %></strong>
    </div>
</div>