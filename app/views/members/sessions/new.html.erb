<div class="container">
  <div class="row d-flex justify-content-center">
    <h3 class="d-inline-flex p-3 font-weight-bold">ココギャルにログイン</h3>
  </div>

  <div class="row d-flex justify-content-center">
    <%= form_with model: @member, url: member_session_path, id: 'new_member', class: 'new_member', local: true do |f| %>
      <div class="flex-column mb-4">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group flex-column mb-4">
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group flex-column mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログインを維持しますか?" %>
        </div>
      <% end %>

      <div class="form-group flex-column mb-4">
        <%= f.submit "ログイン", class:"col-4 offset-3 btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="d-inline-flex p-2">
      <%= render "members/shared/links" %>
    </div>
  </div>
</div>