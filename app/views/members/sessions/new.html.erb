<div class="container">
  <div class="row mb-5">
    <h3 class="col-md-6">ログイン</h3>
  </div>

    <%= form_with model: @member, url: member_session_path, id: 'new_member', class: 'new_member', local: true do |f| %>
      <div class="form-group row md-3">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group row md-3">
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログインを維持しますか?" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

  <%= render "members/shared/links" %>
</div>