<div class="container">
  <div class="row d-flex align-items-center pt-5 pb-2">
    <h4>新規投稿</h4>
  </div>

  <%= render 'layouts/error_messages', object: @word %>
  
    <%= form_with model:@word, class:"new-form", local:true do |f| %>
      <div class="form-group row md-3 offset-2 mx-auto">
        <p class="word">
          <%= f.label :sentence, '言葉' %></p>
          <%= f.text_area :sentence, class:"form-control" %>
      </div>
      <div class="form-group row md-3 offset-2 mx-auto">
        <p class="genre">
          <%= f.label :genre, 'ジャンル', class:"control-label" %></br>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "ジャンルを選択" %>
        </p>
      </div>
      <div class="form-group row md-3 offset-2 mx-auto pt-3" style="width: 80px;">
        <%= f.submit '届ける', class:"btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
