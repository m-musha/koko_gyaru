<div class="container">
  <div class="row d-flex align-items-center pt-5 pb-2">
    <h4>新規投稿</h4>
  </div>

    <%= form_with model:@word, local:true do |f| %>
      <div class="form-group row md-3 offset-2 mx-auto" style="width: 400px;">
        <p class="text-center mb-0" style="width: 400px;">
          <%= f.label :sentence, '言葉' %></p>
          <%= f.text_area :sentence, class:"form-control" %>
      </div>
      <div class="form-group row md-3 offset-2 mx-auto" style="width: 250px;">
        <p class="text-center mb-0" style="width: 250px;">
          <%= f.label :genre, 'ジャンル', class:"control-label" %></br>
          <%= f.fields_for :word_genres do |genre_form| %>
          <%= genre_form.collection_select :genre_id, Genre.all, :id, :name, include_blank: "ジャンルを選択" %>
          <% end %>
        </p>
      </div>
      <div class="form-group row md-3 offset-2 mx-auto pt-3" style="width: 80px;">
        <%= f.submit '届ける', class:"btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
