<div class="container">
  <%= render 'members/words/all_rank', all_ranks:@all_ranks %>

  <h4>一覧</h4>
  <div class="row pt-5">
    <table class="table table-bordered">
      <tbody class="col-md-10">
        <% @words.each do |word| %>
        <tr>
          <td class="genre">
            <% word.genres.each do |genre| %>
            <%= genre.name %>
            <% end %>
          </td>
          <td class="sentence">
            <%= link_to word_path(word.id) do %>
            <%= word.sentence %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row mt-2">
    <div class="col-md-12 d-flex justify-content-center">
      <%= paginate @words %>
    </div>
  </div>
</div>