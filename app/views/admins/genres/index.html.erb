<div class="container">
  <div class="row">
    <h5 class="col-md-4">言葉のジャンル一覧<a href="#newgenre">追加</a></h5>
  </div>

  <div class="row">
    <div class="md-5">
      <table class="table">
        <thead>
          <tr>
            <th class="text-left">ジャンル名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_genre_path(genre.id) %></td>
            <td><%= link_to "削除", genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn btn-sm btn-danger"%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <section id="newgenre">
    <div class="row">
      <div class="col-4">
        <%= form_with model:@genre, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, placeholder:"新しいジャンル名" %>
          <%= f.submit "追加する", class:"btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </section>

</div>