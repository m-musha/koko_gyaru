    <header class="shadow-sm">
      <div class="container">
        <div class="row">
            <div class="logo"><%= link_to image_tag("logo.png"), "/" %></div>
              <div class="search"><%= render 'layouts/search-form' %></div>
              <nav class="navbar navbar-expand-lg navbar-light">
                <ul class="navbar-nav">
                  <!--ログイン中-->
                  <% if member_signed_in? %>
                    <li class="nav-item">
                      <%= link_to new_word_path do %>
                      <i class="far fa-edit fa-2x fa-border my-orange text-center"></i>
                      <% end %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "/members/#{current_member.id}" do %>
                      <i class="fas fa-house-user fa-2x fa-border my-pink"></i>
                      <% end %>
                    </li>
                    <li class="nav-item">
                      <%= link_to destroy_member_session_path, method: :delete do %>
                      <i class="fas fa-sign-out-alt fa-2x fa-border my-black"></i>
                      <% end %>
                    </li>
                  <% elsif admin_signed_in? %>
                    <li class="nav-item">管理者</li>
                    <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
　　　　　　　　　<!--ゲストの時-->
                  <% else %>
                    <li class="nav-item">ゲスト</li>
                    <li class="nav-item">
                      <%= link_to new_member_registration_path do %>
                      <i class="fas fa-user-lock fa-2x fa-border my-green"></i>
                      <% end %>
                    </li>
                    <li class="nav-item">
                      <%= link_to new_member_session_path do %>
                      <i class="fas fa-sign-in-alt fa-2x fa-border my-black"></i>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </nav>
        </div>
      </div>
    </header>
