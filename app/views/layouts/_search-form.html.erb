<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :text %>
    <%= f.select :range, options_for_select([["メンバー","member"], ["言葉","word"], ["ジャンル","genre"]]) %>
    <%= f.select :search, options_for_select([["完全一致","perfect"], ["部分一致","partial_match"]]) %>
    <%= f.submit '検索' %>
  <% end %>
</div>