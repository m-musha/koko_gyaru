<% if object.errors.any? %>
  <div id="error_explanation" class="alert alert-warning">
    <h3><%= pluralize(object.errors.count, "error") %> 保存を禁止しました:</h3>
    <ul>
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>